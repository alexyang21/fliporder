<div class="row">
  <div class="col-md-9">
    <div class="center">
      <h1><%= @restaurant.name %></h1>
    </div>

    <ul class="nav nav-tabs nav-justified">
      <li class="active"><%= link_to "Appetizers", '#appetizers',
                          id: "option-a", :'data-toggle' => "tab" %></li>
      <li><%= link_to "Entrees", '#entrees',
                          id: "option-b", :'data-toggle' => "tab" %></li>
      <li><%= link_to "Desserts", '#desserts',
                          id: "option-c", :'data-toggle' => "tab" %></li>
    </ul>

    <div id="myTabContent" class="tab-content">
      <div class="tab-pane fade in active" id="appetizers">

        <% appetizers = @menus.select { |menu| menu.category == "Appetizers" } %>

        <% appetizers.each do |appetizer| %>
          <div class="col-md-6">
            <div class="well well-sm">
              <div class="menu_listing_name">
                <h4>
                  <%= appetizer.name %> - <%= number_to_currency(appetizer.price) %>
                </h4>
                <p><%= appetizer.description %></p>
              </div>
              <%= link_to items_path(menu_id: appetizer), method: :post,
                class: "btn btn-primary btn-sm", remote: true do %>
                  <i class="glyphicon glyphicon-plus white"></i>
                  <span class="white">Add to cart</span>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
      <div class="tab-pane fade" id="entrees">

        <% appetizers = @menus.select { |menu| menu.category == "Entrees" } %>

        <% appetizers.each do |appetizer| %>
          <div class="col-md-6">
            <div class="well well-sm">
              <div class="menu_listing_name">
                <h4>
                  <%= appetizer.name %> - <%= number_to_currency(appetizer.price) %>
                </h4>
                <p><%= appetizer.description %></p>
              </div>
              <%= link_to items_path(menu_id: appetizer), method: :post,
                class: "btn btn-primary btn-sm", remote: true do %>
                  <i class="glyphicon glyphicon-plus white"></i>
                  <span class="white">Add to cart</span>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
      <div class="tab-pane fade" id="desserts">

        <% appetizers = @menus.select { |menu| menu.category == "Desserts" } %>

        <% appetizers.each do |appetizer| %>
          <div class="col-md-6">
            <div class="well well-sm">
              <div class="menu_listing_name">
                <h4>
                  <%= appetizer.name %> - <%= number_to_currency(appetizer.price) %>
                </h4>
                <p><%= appetizer.description %></p>
              </div>
              <%= link_to items_path(menu_id: appetizer), method: :post,
                class: "btn btn-primary btn-sm", remote: true do %>
                  <i class="glyphicon glyphicon-plus white"></i>
                  <span class="white">Add to cart</span>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <% if false %>
    <div class="row">
      <%= render 'store/listing' %>
    </div>
    <% end %>
  </div>

  <div class="col-md-3">
    <%= hidden_div_if(@cart.items.empty?, class: "side_bar") do %>
      <%= render @cart %>
    <% end %>
  </div>
</div>

<%= link_to root_path do %>
  <i class="glyphicon glyphicon-chevron-left"></i> Back
<% end %>