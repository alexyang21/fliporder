<div class="row">
  <div class="col-md-9 center">
    <h1>
      Choose from <%= pluralize(@restaurants.count, 'restaurant') %>
    </h1>

    <div class="row">
      <% cache ['store', Restaurant.latest] do %>
        <% @restaurants.each do |restaurant| %>
          <% cache ['restaurant', restaurant] do %>

            <div class="col-sm-6 col-md-3">
              <div class="thumbnail">
                <%= link_to(image_tag(restaurant.image.url(:thumb)),
                    store_path(restaurant.name)) %>

                <div class="caption">
                  <h4><%= restaurant.name %></h4>
                  <h5><%= restaurant.description %></h5>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="col-md-3">
    <%= hidden_div_if(@cart.items.empty?, class: "side_bar") do %>
      <%= render @cart %>
    <% end %>
  </div>
</div>