<h1>Listing menus</h1>

<table>
  <% @menus.each do |menu| %>
    <tr>
      <td class="menu_info">
        <dl>
          <dt><%= menu.name %> - <%= menu.price %></dt>
          <dd><%= menu.description %></dd>
        </dl>
      </td>
      <td class="menu_actions">
        <%= link_to 'Show', menu %>
        <%= link_to 'Edit', edit_menu_path(menu) %>
        <%= link_to 'Destroy', menu, method: :delete,
            data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
</table>

<br>

<%= link_to 'New Menu', new_menu_path %>
