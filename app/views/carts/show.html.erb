<% if notice %>
  <p id="notice"><%= notice %></p>
<% end %>

<h2>Your Cart</h2>

<div class="table-responsive">
  <table class="table table-hover">
    <colgroup>
      <col class="col-md-3"></col>
      <col class="col-md-1"></col>
      <col class="col-md-1"></col>
      <col class="col-md-1"></col>
    </colgroup>
    <thead class="headings">
      <tr>
        <th>Item</td>
        <th class="center">Price</td>
        <th class="center">Quantity</td>
        <th class="center">Subtotal</td>
      </tr>
    </thead>

    <tbody>
      <% @cart.items.each do |item| %>
        <tr>
          <td><%= item.menu.name %></td>
          <td class="center">
            <%= number_to_currency(item.menu.price) %>
          </td>
          <td class="center">&times;<%= item.quantity %></td>
          <td class="center">
            <%= number_to_currency(item.total_price) %>
          </td>
        </tr>
      <% end %>
    </tbody>

    <tfoot>
      <tr class="total_line">
        <td></td>
        <td></td>
        <td class="center">TOTAL</td>
        <td class="total_cell center">
          <%= number_to_currency(@cart.total_price) %>
        </td>
      </tr>
    </tfoot>
  </table>
</div>

<br>

<div class="row">
  <div class="col-md-1">
    <%= button_to 'Empty cart', @cart, method: :delete,
        data: { confirm: 'Are you sure?' },
        class: "btn btn-danger btn-sm" %>
  </div>
</div>