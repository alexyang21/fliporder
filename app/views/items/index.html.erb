<h1>Listing items</h1>

<table>
  <thead>
    <tr>
      <th>Menu</th>
      <th>Cart</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.menu %></td>
        <td><%= item.cart %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_item_path do %>
  <i class="glyphicon glyphicon-plus"></i> Add Item
<% end %>
