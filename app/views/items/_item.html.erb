<tr>
  <td><%= item.menu.name %></td>
  <td class="center">
    <%= number_to_currency(item.menu.price) %>
  </td>
  <td class="center">
    <div class="pull-left">
      <%= button_to '-', item, method: :delete,
         class: "btn btn-danger btn-sm btn_margin" %>
    </div>

    &times;<%= item.quantity %>

    <div class="pull-right">
      <%= button_to '+', items_path(menu_id: item.menu),
          class: "btn btn-success btn-sm btn_margin" %>
    </div>
  </td>
  <td class="center">
    <%= number_to_currency(item.total_price) %>
  </td>
</tr>