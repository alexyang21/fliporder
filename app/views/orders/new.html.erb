<% content_for :head do %>
  <%= tag :meta, :name => "stripe-key",
          :content => ENV["STRIPE_TEST_PUBLIC_KEY"] %>
  <%= javascript_include_tag "http://stripe.github.io/jquery.payment/lib/jquery.payment.js",
      "application" %>
<% end %>

<div class="row">
  <div class="col-md-6">
    <%= render 'form' %>
  </div>

  <div class="col-md-4">
    <div class="side_bar">
      <%= render @cart %>
    </div>
  </div>
</div>

<%= link_to store_path(@cart.items.first.menu.restaurant.name) do %>
  <i class="glyphicon glyphicon-chevron-left"></i> Back
<% end %>
