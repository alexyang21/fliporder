<h1>Listing restaurants</h1>

<table>
  <% @restaurants.each do |restaurant| %>
    <tr>
      <td>
        <%= image_tag(restaurant.image_url, class: "restaurant_image") %>
      </td>
      <td class="restaurant_info">
        <dl>
          <dt><%= restaurant.name %></dt>
          <dd><%= restaurant.description %></dd>
        </dl>
      </td>
      <td class="restaurant_actions">
        <%= link_to 'Show', restaurant %>
        <%= link_to 'Edit', edit_restaurant_path(restaurant) %>
        <%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
</table>

<br>

<%= link_to 'New Restaurant', new_restaurant_path %>
