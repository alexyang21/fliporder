<h1>Listing restaurants</h1>

<table>
  <% @restaurants.each do |restaurant| %>
    <tr>
      <td>
        <%= image_tag(restaurant.image_url, class: "restaurant_image") %>
      </td>
      <td class="restaurant_info">
        <dl>
          <dt><%= restaurant.name %></dt>
          <dd><%= restaurant.description %></dd>
        </dl>
      </td>
      <td class="restaurant_actions">
        <%= link_to restaurant do %>
          <i class="glyphicon glyphicon-zoom-in"></i> Show
        <% end %>
        |
        <%= link_to edit_restaurant_path(restaurant) do %>
          <i class="glyphicon glyphicon-edit"></i> Edit
        <% end %>
        |
        <%= link_to restaurant, method: :delete, data: { confirm: 'Are you sure?' } do %>
          <i class="glyphicon glyphicon-trash"></i> Delete
        <% end %>
      </td>
    </tr>
  <% end %>
</table>

<br>

<%= link_to new_restaurant_path do %>
  <i class="glyphicon glyphicon-plus"></i> Add Restaurant
<% end %>
